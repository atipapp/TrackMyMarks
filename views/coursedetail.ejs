<%- include('header') %>
<!-- start: content -->

<div class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="display-1"><%= course.name %></h1>
            </div>
        </div>
    </div>
</div>
<div class="py-4">
    <div class="container">
        <h1 class="">Adatok</h1>
        <div class="row">
            <div class="col-md-7">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Előadó</th>
                        <th>Tárgyhonlap</th>
                        <th>Átlag</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td><%= course.lecturer %></td>
                        <td>
                            <a href="<%= course.website %>"><%= course.website %></a>
                        </td>
                        <td>5</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="container">
        <h1 class="">Jegyeim</h1>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Jegy</th>
                        <th>Részletek</th>
                        <th>Dátum</th>
                        <th class="text-center">Szerkesztés</th>
                        <th class="text-center">Törlés</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% coursemarks.forEach(function(item){ %>
                    <tr>
                        <td><%= item.value %></td>
                        <td><%= item.details %></td>
                        <td> <%= item.date %></td>
                        <td class="text-center">
                            <a class="btn btn-primary" href="/marks/edit/id">Szerkesztés</a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-primary" href="/marks/delete/id">Törlés</a>
                        </td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="container">
        <h1 class="">Új jegy felvétele</h1>
        <div class="row">
            <div class="col-md-12">
                <form class="form-inline" method="post" action="/courses/<%= course.id %>/details">
                    <div class="form-group">
                        <select name=value class="form-control" id="sel1">
                            <option value="5">5</option>
                            <option value="4">4</option>
                            <option value="3">3</option>
                            <option value="2">2</option>
                            <option value="1">1</option>
                        </select>
                    </div>
                    <input type="text" name="details" class="form-control p-2 m-2 w-25"
                           placeholder="Részletek">
                    <input type="text" name="date" class="form-control p-2 m-2" placeholder="Dátum">
                    <button type="submit" class="btn btn-primary p-2 m-1">Hozzáadás</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end: content -->
<%- include('footer') %>