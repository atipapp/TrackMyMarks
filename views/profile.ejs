<%- include('header') %>
<!-- start: content -->

<div class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="display-1">Profilom</h1>
            </div>
        </div>
    </div>
</div>
<div class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card text-white p-5 h-100">
                    <div class="card-body">
                        <form method="post" action="/profile">
                            <div class="form-group">
                                <div class="form-group"> <label class="text-primary">Felhasználónév</label>
                                    <div class="form-group"><label class="text-dark"><%= user.username %></label>
                                        <input type="hidden" name="username" value="<%= user.username %>">
                                        <div class="form-group"> <label class="text-primary">Teljes név</label>
                                            <input type="text" name="fullname" class="form-control" value="<%= user.fullname %>"></div>
                                        <div class="form-group"> <label class="text-primary">Email*</label>
                                            <input type="email" required name="email" class="form-control" value="<%= user.email %>"></div>
                                        <button type="submit" class="btn btn-secondary">Mentés</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-white p-5 h-100">
                    <div class="card-body">
                        <form method="post" action="/profile">
                            <div class="form-group">
                                <div class="form-group">
                                    <div class="form-group">
                                        <div class="form-group"> <label class="text-primary">Régi jelszó*</label>
                                            <input type="password" name="passwordold" class="form-control" placeholder="Régi jelszó"> </div>
                                        <div class="form-group"> <label class="text-primary">Új jelszó*</label>
                                            <input type="password" name="password" class="form-control" placeholder="Új jelszó"> </div>
                                        <div class="form-group"> <label class="text-primary">Új jelszó mégegyszer*</label>
                                            <input type="password" name="passwordagain" class="form-control" placeholder="Új jelszó mégegyszer"> </div>
                                        <div class="form-group"> <label class="text-primary" title="Ha szükséged lenne rá bejelentkezés nélkül megtekinthető az email megadása után. Ne írd be ide a jelszavad.">Jelszó emlékeztető</label>
                                            <input type="text" name="passwordreminder" class="form-control" value="<%= user.passwordreminder %>" placeholder="Ne írd be ide a jelszavad" title="Ha szükséged lenne rá bejelentkezés nélkül megtekinthető az email megadása után. Ne írd be ide a jelszavad."> </div>
                                        <button type="submit" class="btn btn-secondary">Jelszó megváltoztatása</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- end: content -->
<%- include('footer') %>